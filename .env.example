# Tropical Vintage Love Journal - Environment Variables
# Copy this file to .env and fill in your actual values

# Google Gemini API Key for AI chat functionality
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_APP_NAME=Tropical Love Journal

# Production URLs (for deployment)
NEXT_PUBLIC_API_URL_PROD=https://your-domain.com/api
NEXT_PUBLIC_SOCKET_URL_PROD=https://your-domain.com
NEXT_PUBLIC_GOOGLE_CLIENT_ID_PROD=your_production_google_client_id

# Authentication
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_URL_PROD=https://your-domain.com
NEXT_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# Development/Production Mode
NODE_ENV=development